extends layout 

block content
    h1 #{title}
    if items.length > 0
        p Can't delete this category because there are items associated with it.
    else 
        form(action="" method="POST" class="confirmation-dialog")
            p Are you sure you want to delete this category?
            .btns-container 
                button.secondary-btn Cancel 
                button(type="submit" class="danger-btn") Delete