extends layout

block content
    .container(style="display:flex; justify-content: space-between; align-items: center;")
        h2 #{title}
        a.primary-btn.create-btn(href="/category/create") Create Category
    .items
        each category in categories
            .category
                .action-btns
                    a.secondary-btn(aria-label="Delete Category" href=`/category/delete/${category.id}`).
                        <svg viewBox="0 0 24 24" width="24" height="24" stroke="var(--red)" stroke-width="2" fill="none" stroke-linecap="round" stroke-linejoin="round" class="css-i6dzq1"><polyline points="3 6 5 6 21 6"></polyline><path d="M19 6v14a2 2 0 0 1-2 2H7a2 2 0 0 1-2-2V6m3 0V4a2 2 0 0 1 2-2h4a2 2 0 0 1 2 2v2"></path><line x1="10" y1="11" x2="10" y2="17"></line><line x1="14" y1="11" x2="14" y2="17"></line></svg>
                    a.secondary-btn(aria-label="Update Category" href=`/category/update/${category.id}`).
                        <svg viewBox="0 0 24 24" width="24" height="24" stroke="var(--grey)" stroke-width="2" fill="none" stroke-linecap="round" stroke-linejoin="round" class="css-i6dzq1"><path d="M17 3a2.828 2.828 0 1 1 4 4L7.5 20.5 2 22l1.5-5.5L17 3z"></path></svg>
                a(href=`/item?category=${category.name.toLowerCase().replace(/\s+/g,"+")}`)
                    h3= category.name
                p= category.description