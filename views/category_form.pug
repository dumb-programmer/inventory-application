extends layout

block content 
    h1 #{title}
    form(action="" method="POST" class="form")
        label(for="name") Name:
        input(type="text" id="name" name="name" value=(category && category.name))
        label(for="description") Description: 
        textarea(id="description" name="description")= category && category.description
        button(type="submit" class="primary-btn") Submit